<div id="<%= dom_id stock %>" class="w-full sm:w-auto my-5 space-y-5">
  <tr class="bg-white border-b  border-gray-200 hover:bg-gray-50">
    <th scope="row" class="px-6 py-4">
      <%= stock.size %>
    </th>
    <td class="px-6 py-4">
      <%= stock.price %> 
    </td>
    <td class="px-6 py-4">
      <%= stock.product_id %>
    </td>
    
    <td class="px-6 py-4 ">
      <%= link_to "Show", [:admin, stock.product, stock], class: "font-medium text-blue-600 hover:underline" %>
    </td>
    <td class="px-6 py-4 ">
      <%= link_to "Edit", edit_admin_product_stock_path(stock.product,stock), class: "font-medium text-blue-600 hover:underline" %>
    </td>
    <td class="px-6 py-4 ">
      <%= button_to "Destroy", admin_product_stock_path(stock.product,stock), method: :delete, class: "font-medium text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
    </td>
  </tr>
    <%= link_to "Back to product", admin_products_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
