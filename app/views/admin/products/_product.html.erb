<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <tr class="bg-white border-b  border-gray-200 hover:bg-gray-50">
    <th scope="row" class="px-6 py-4">
        <%= product.images.any? ? image_tag(product.images.first) : image_tag("https://via.placeholder.com/50") %>
      </th>
    <th scope="row" class="px-6 py-4">
      <%= product.name %>
    </th>
    <td class="px-6 py-4">
      <%= product.description %>
    </td>
    <td class="px-6 py-4">
      <%= product.price %>
    </td>
    <td class="px-6 py-4">
      <%= product.category_id %>
    </td>
    <td class="px-6 py-4 ">
      <%= link_to "Show", [:admin, product], class: "font-medium text-blue-600 hover:underline" %>
    </td>
    <td class="px-6 py-4 ">
      <%= link_to "Edit", edit_admin_product_path(product), class: "font-medium text-blue-600 hover:underline" %>
    </td>
    <td class="px-6 py-4 ">
      <%= button_to "Destroy", admin_product_path(product), method: :delete, class: "font-medium text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
    </td>
  </tr>
</div>
