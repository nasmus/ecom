<div id="<%= dom_id category %>" class="  w-full sm:w-auto my-5 space-y-5">
  <tr class="bg-white border-b ">
      <th scope="row" class="px-6 py-4">
        <%= image_tag(category.image.present? ? category.image : "https://via.placeholder.com/50",class: "w-16 h-16 object-cover rounded") %>
      </th>
      <td class="px-6 py-4">
        <%= category.name %>
      </td>
      <td class="px-6 py-4">
        <%= category.description %>
      </td>
      <td class="px-6 py-4 font-medium text-blue-600 hover:underline cursor-pointer">
        <%= link_to "Show", [:admin, category]  %>
      </td>
      <td class="px-6 py-4 font-medium text-blue-600 hover:underline cursor-pointer">
        <%= link_to "Edit", edit_admin_category_path(category) %>
      </td>
      <td class="px-6 py-4 font-medium text-red-600 hover:underline ">
        <%= button_to "Destroy", admin_category_path(category), method: :delete, class:"cursor-pointer", data: { turbo_confirm: "Are you sure?"} %>
      </td>
  </tr>
</div>

