                              View
                           </th>
                           <th scope="col" class="px-6 py-3">
                              Edit
                           </th>
                        </tr>
                  </thead>
                  <% @orders.each do |order| %>
                     <tbody>
                        <tr class="bg-white border-b border-gray-200">
                           <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                              <%= order.id %>
                           </th>
                           <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                              <%= order.customer_email %>
                           </th>
                           <td class="px-6 py-4">
                              <div class="flex items-center mb-4">
                                 <input id="default-checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded-sm     ">
                                 <%= order.fulfilled? ? "Yes" : "No" %>
                              </div>
                           </td>
                           <td class="px-6 py-4">
                              <%= order.total %>
                           </td>
                           <td class="px-6 py-4">
                              <%= order.address %>
                           </td>
                           <td class="px-6 py-4 ">
                              <%= link_to "Show", [:admin, order], class: "font-medium text-blue-600 hover:underline" %>
                           </td>
                           <td class="px-6 py-4 ">
                              <%= link_to "Edit", edit_admin_order_path(order), class: "font-medium text-blue-600 hover:underline" %>
                           </td>
                        </tr>
                     </tbody>
